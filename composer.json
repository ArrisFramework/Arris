{
    "name": "karelwintersky/arris",
    "description": "Karel Wintersky's Classes Collection",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Karel Wintersky",
            "email": "karel.wintersky@gmail.com"
        }
    ],
    "keywords": [ "logging", "database", "sphinx", "console", "hooks" ],
    "config": {
        "optimize-autoloader": true
    },
    "require": {
        "php": ">=7",
        "ext-pdo": "*",
        "ext-mbstring": "*",
        "ext-json": "*",
        "ext-readline": "*",
        "monolog/monolog": "^1.23",
        "foolz/sphinxql-query-builder": "^2.0"
    },
    "autoload": {
        "files": [
          "functions/helpers.php",
          "functions/functions.php"
        ],
        "psr-4": {
            "Arris\\"           : "sources"
        }
    }
}
