{
    "name": "karelwintersky/arris",
    "description": "Karel Wintersky's Application microframework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Karel Wintersky",
            "email": "karel.wintersky@gmail.com"
        }
    ],
    "keywords": [ "logging", "database", "console", "hooks", "routing" ],
    "config": {
        "optimize-autoloader": true
    },
    "require": {
        "php": ">=7",
        "ext-pdo": "*",
        "ext-mbstring": "*",
        "ext-json": "*",
        "ext-readline": "*",
        "ext-curl": "*",
        "ext-simplexml": "*",
        "monolog/monolog": "^1.23",
        "sabre/event": "^5",
        "nikic/fast-route": "^1.3",
        "adbario/php-dot-notation": "^2.2"
    },
    "autoload": {
        "files": [
          "functions/functions.php",
          "functions/helpers.php"
        ],
        "psr-4": {
            "Arris\\"           : ["interfaces", "sources"]
        }
    }
}
